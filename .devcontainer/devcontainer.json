{
	"name": "Python Dev Container",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/git-lfs:1": {},
		"ghcr.io/va-h/devcontainers-features/uv": {}
	},
	"containerEnv": {
		"UV_LINK_MODE": "symlink"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-xml",
				"redhat.vscode-yaml",
				"charliermarsh.ruff"
			]
		}
	}
}